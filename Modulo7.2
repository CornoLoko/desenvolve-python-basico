import random
def embaralhar_palavras(frase):
    palavras = frase.split()
    palavras_embaralhadas = []
    for palavra in palavras:
        if len(palavra) > 3:
            # Mantém o primeiro e o último caractere, embaralhando as letras do meio
            primeiro = palavra[0]
            ultimo = palavra[-1]
            meio = list(palavra[1:-1])
            random.shuffle(meio)
            nova_palavra = primeiro + ''.join(meio) + ultimo
        else:
            nova_palavra = palavra
        palavras_embaralhadas.append(nova_palavra)
    return ' '.join(palavras_embaralhadas)
frase = input("Digite uma frase: ")
resultado = embaralhar_palavras(frase)
print("Frase embaralhada:", resultado)
