def fila_balada():
    fila = []
    quantidade = int(input("Quantas pessoas estão na fila da balada? "))
    for _ in range(quantidade):
        nome = input("Nome: ")
        idade = int(input("Idade: "))
        fila.append((nome, idade))
    menores = tuple([nome for nome, idade in fila if idade < 18])
    maiores = tuple([nome for nome, idade in fila if idade >= 18])
    print("\nMenores de idade (não podem entrar):")
    print(menores)
    print("\nMaiores de idade (entrada permitida):")
    print(maiores)
